{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2017", "es7", "es6", "dom"],
    "experimentalDecorators": true,
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
			"@util/*": ["util/*"],
			"@structs/*": ["structures/*"],
			"@handlers/*": ["handlers/*"]
		},
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
